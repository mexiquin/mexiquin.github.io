---
import Base from "./Base.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<Base title={ title }>
    <article class="single-article">
        <slot />
    </article>
</Base>

<style>
    .single-article {
        background-color: var(--secondary-background-color);
        padding: 0.25rem 1rem;
        border-radius: 5px;
    }
</style>
